<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.suzume.movies">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Movies"
        tools:targetApi="31">
        <activity
            android:name=".presentation.ReviewFullActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ImageFullActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.TrailerListActivity"
            android:exported="false"
            android:label="@string/activity_label_trailers" />
        <activity
            android:name=".presentation.ImageListActivity"
            android:exported="false"
            android:label="@string/activity_label_images" />
        <activity
            android:name=".presentation.ReviewListActivity"
            android:exported="false"
            android:label="@string/activity_label_review" />
        <activity
            android:name=".presentation.PersonListActivity"
            android:exported="false"
            android:label="@string/activity_label_actors" />
        <activity
            android:name=".presentation.MovieDetailFromDbActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.FavoriteMoviesActivity"
            android:exported="false"
            android:label="@string/activity_label_favorite" />
        <activity
            android:name=".presentation.MovieDetailActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>